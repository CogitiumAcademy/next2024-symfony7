<a href="{{ path('admin_category_add') }}" class="btn btn-primary">Ajouter</a>

<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        DataTable Example
    </div>
    <div class="card-body">
        <table id="datatablesSimple">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Parent</th>
                    <th></th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Parent</th>
                    <th></th>
                </tr>
            </tfoot>
            <tbody>

                {% for category in categories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.name }}</td>
                    <td>{{ category.parent }}</td>
                    <td>
                        <a href="{{ path('admin_category_update', {id: category.id}) }}" class="btn btn-primary btn-sm">Modifier</a>
                        <a href="{{ path('admin_category_delete', {id: category.id, _csrf_token: csrf_token('delete')}) }}" class="btn btn-primary btn-sm" onclick="return confirm('Confirmation ?');">Supprimer</a>
                    </td>
                </tr>
                {% endfor %}

            </tbody>
        </table>
    </div>
</div>
{% endblock %}
